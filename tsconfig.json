{
  "compilerOptions": {
    "module": "ESNext", 
    "target": "ESNext",
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {},
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  }
}
